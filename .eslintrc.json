{
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier",
    "plugin:import/recommended",
    "plugin:import/warnings",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["tailwindcss"],
  "ignorePatterns": ["tailwind.config.js", "node_modules/*"],
  "rules": {
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "import/resolver": {
      "typescript": {}
    },
    "import/no-unresolved": "off"
  },
  "settings": {
    "tailwindcss": {
      "groupByResponsive": true
    }
  }
}
